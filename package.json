{
  "name": "root",
  "private": true,
  "workspaces": [
    "gulp-purgecss",
    "postcss-purgecss",
    "purgecss",
    "purgecss-from-html",
    "purgecss-from-jsx",
    "purgecss-from-pug",
    "purgecss-from-twig",
    "purgecss-from-tsx",
    "purgecss-webpack-plugin",
    "purgecss-with-wordpress",
    "vue-cli-plugin-purgecss"
  ],
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "@vuepress/plugin-google-analytics": "^1.8.2",
    "@vuepress/theme-default": "^1.8.2",
    "@wessberg/rollup-plugin-ts": "^1.3.14",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.30.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "rollup": "^2.52.7",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5",
    "vuepress": "^1.8.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "ts-node scripts/build.ts",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "firebase deploy",
    "lint": "eslint . --ext .ts --ignore-path .gitignore --fix",
    "prettier": "prettier --write --parser typescript '**/*.ts'",
    "test": "jest",
    "generate-changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "ts-node scripts/verify-commit.ts"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --ignore-path .gitignore",
      "git add"
    ],
    "*.ts": [
      "npm run prettier",
      "git add"
    ]
  }
}
