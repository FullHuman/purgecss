{
  "name": "root",
  "private": true,
  "workspaces": [
    "gulp-purgecss",
    "postcss-purgecss",
    "purgecss",
    "purgecss-from-html",
    "purgecss-from-pug",
    "purgecss-from-twig",
    "purgecss-webpack-plugin"
  ],
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "@vuepress/plugin-google-analytics": "^1.4.0",
    "@vuepress/theme-default": "^1.4.0",
    "@wessberg/rollup-plugin-ts": "^1.2.23",
    "conventional-changelog-cli": "^2.0.31",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.3",
    "rollup": "^2.3.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "vuepress": "^1.4.0"
  },
  "scripts": {
    "build": "ts-node scripts/build.ts",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "firebase deploy",
    "lint": "eslint . --ext .ts --ignore-path .gitignore --fix",
    "prettier": "prettier --write --parser typescript '**/*.ts'",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "ts-node scripts/verify-commit.ts"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "npm run prettier",
      "git add"
    ]
  }
}
